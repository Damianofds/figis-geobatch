<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:quartz="http://servicemix.apache.org/quartz/1.0"
    xmlns:ie="http://www.geo-solutions.it/GeomCompare/"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


	<quartz:endpoint service="ie:QuartzTrigger" endpoint="trigger"
        targetService="ie:iestatsbean" targetOperation="ie:quartz">

		<quartz:triggers>
		    <!-- Runs every seven days -->
			<quartz:cron cronExpression="0 * * */7 * ?" />
			<!-- Runs every 15 minutes -->
			<!-- <quartz:cron cronExpression="0 */15 * * * ?" /> -->
		</quartz:triggers>

	</quartz:endpoint>

</beans>
