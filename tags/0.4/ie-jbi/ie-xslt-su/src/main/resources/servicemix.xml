<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:sm="http://servicemix.apache.org/config/1.0"
       xmlns:ie="http://www.geo-solutions.it/GeomCompare/"
       xmlns:xsi="http://http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://servicemix.apache.org/config/1.0 http://servicemix.apache.org/schema/servicemix-core-2009.01.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <classpath>
    <location>.</location>
    <location>lib/servicemix-components-3.3.1.jar</location>
  </classpath>

  <sm:serviceunit id="jbiA">
    <sm:activationSpecs>
      <sm:activationSpec service="ie:identXSLT" endpoint="endpointD">
        <sm:component>
          <bean class="org.apache.servicemix.components.xslt.XsltComponent">
            <property name="xsltResource" value="classpath:bridge.xslt" />
          </bean>
        </sm:component>
      </sm:activationSpec>
    </sm:activationSpecs>
  </sm:serviceunit>

</beans>